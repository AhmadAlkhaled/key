{
  "version": 2,
  "builds": [
    {
      "src": "client/src/index.html",
      "use": "@vercel/parcel",
      "config": {
        "publicUrl": "./static/"
      }
    },
    {
      "src": "Backend/server.js", 
      "use": "@vercel/node" 
    },
    {
      "src": "package.json", 
      "use": "@vercel/static-build" 
    }
  ],
  "routes": [
    {
      "src": "/api/.*",
      "dest": "Backend/server.js" 
    }, {
      "src": "/(.*)",
      "dest": "client/src/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "client/$1" 
    }
  ]
}
